<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Importation de notre Toolbar -->
    <include
        xmlns:android="http://schemas.android.com/apk/res/android"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/michel"
        android:name="com.example.michel.mynews.Fragments.EditTextQueryTermFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:id="@+id/michel2"
        android:name="com.example.michel.mynews.Fragments.BoxFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/line_gray"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/margin_top_enable"
        android:layout_marginLeft="@dimen/margin_left_enable"
        android:layout_marginRight="@dimen/margin_right_enable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_enable" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_top_enable"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="@string/enable_notifications"
            android:layout_marginLeft="@dimen/margin_left_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switch_notification"
            android:layout_marginRight="@dimen/margin_right_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>